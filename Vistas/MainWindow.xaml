<Window x:Class="Vistas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="554" Width="848">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2c3e50" Margin="0,0,0,20">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="SISTEMA DE GESTIÓN DE CURSOS" 
                          FontSize="18" FontWeight="Bold" 
                          Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Universidad Nacional de Jujuy" 
                          FontSize="12" 
                          Foreground="#bdc3c7" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Formulario de Login -->
        <Border Grid.Row="1" Background="White" 
                CornerRadius="10" Margin="50,0,50,0"
                BorderBrush="#bdc3c7" BorderThickness="1">
            <StackPanel VerticalAlignment="Center" Margin="40">
                <TextBlock Text="INICIAR SESIÓN" 
                          FontSize="16" FontWeight="Bold" 
                          HorizontalAlignment="Center" 
                          Foreground="#2c3e50" Margin="0,0,0,30"/>

                <!-- Campo Usuario -->
                <TextBlock Text="Usuario:" FontWeight="SemiBold" 
                          Foreground="#34495e" Margin="0,0,0,5"/>
                <TextBox Name="txtUsuario" 
                        Height="35" FontSize="14" 
                        BorderBrush="#95a5a6" BorderThickness="1"
                        Padding="10,8" Margin="0,0,0,15"/>

                <!-- Campo Contraseña -->
                <TextBlock Text="Contraseña:" FontWeight="SemiBold" 
                          Foreground="#34495e" Margin="0,0,0,5"/>
                <PasswordBox Name="txtContraseña" 
                           Height="35" FontSize="14" 
                           BorderBrush="#95a5a6" BorderThickness="1"
                           Padding="10,8" Margin="0,0,0,25"/>

                <!-- Botón Ingresar -->
                <Button Name="btnIngresar" 
                       Content="INGRESAR" 
                       Height="40" FontSize="14" FontWeight="Bold"
                       Background="#3498db" Foreground="White" 
                       BorderThickness="0" Cursor="Hand"
                       Click="btnIngresar_Click"/>

                <!-- Mensaje de error -->
                <TextBlock Name="lblError" 
                          Text="" Foreground="Red" 
                          HorizontalAlignment="Center" 
                          Margin="0,15,0,0" FontSize="12"/>
            </StackPanel>
        </Border>

        <!-- Footer -->
        <TextBlock Grid.Row="2" 
                  Text="© 2025 - Laboratorio de Programación Orientada a Objetos II"
                  HorizontalAlignment="Center" VerticalAlignment="Center"
                  FontSize="10" Foreground="#7f8c8d"/>
    </Grid>
</Window>
