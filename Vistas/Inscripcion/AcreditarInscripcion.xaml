<Window x:Class="Vistas.Inscripcion.AcreditarInscripcion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Acreditar Inscripción"
        Height="450" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#f4f6f7">

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <!-- Encabezado -->
            <RowDefinition Height="Auto"/>
            <!-- Buscador -->
            <RowDefinition Height="*"/>
            <!-- Grilla -->
            <RowDefinition Height="Auto"/>
            <!-- Botón -->
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <Border Grid.Row="0" Background="#2c3e50" CornerRadius="10">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="ACREDITAR INSCRIPCIÓN"
                           FontSize="20" FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Buscar alumno y acreditar curso"
                           FontSize="12"
                           Foreground="#bdc3c7"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Sección Buscar Alumno -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,15,0,15">
            <TextBlock Text="DNI del Alumno:"
                       VerticalAlignment="Center"
                       FontWeight="SemiBold" />
            <TextBox x:Name="txtDNI" Width="150" Margin="10,0,10,0"
                     Padding="5"
                     Background="White"
                     BorderBrush="#bdc3c7" />
            <Button Content="Buscar"
                    Width="100"
                    Background="#3498db"
                    Foreground="White"
                    BorderBrush="#2980b9"
                    Padding="5"
                    Cursor="Hand"
                    Click="BtnBuscar_Click"/>
        </StackPanel>

        <!-- DataGrid -->
        <Border Grid.Row="2" Background="White" CornerRadius="10"
                BorderBrush="#d5d8dc" BorderThickness="1">
            <DataGrid x:Name="dgCursos" 
                      AutoGenerateColumns="True"
                      HeadersVisibility="Column"
                      AlternatingRowBackground="#ecf0f1"
                      RowBackground="White"
                      GridLinesVisibility="Horizontal"
                      SelectionMode="Single"
                      Margin="5"
                      IsReadOnly="True"/>
        </Border>

        <!-- Botón Acreditar -->
        <Button Grid.Row="3" Content="Acreditar"
                Width="150"
                Height="35"
                Margin="0,15,0,0"
                HorizontalAlignment="Center"
                Background="#27ae60"
                Foreground="White"
                BorderBrush="#1e8449"
                FontWeight="Bold"
                Cursor="Hand"
                Click="BtnAcreditar_Click"/>
    </Grid>
</Window>