<Window x:Class="Vistas.Usuarios.ABMUsuarios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ABM de Usuarios" Height="550" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- botones de acciones -->
            <RowDefinition Height="Auto"/>
            <!-- botones de navegación -->
            <RowDefinition Height="*"/>
            <!-- campos -->
        </Grid.RowDefinitions>

        <!-- Botones de acciones -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <Button x:Name="btnNuevo" Content="Nuevo" Width="70" Margin="5" Click="btnNuevo_Click"/>
            <Button x:Name="btnModificar" Content="Modificar" Width="70" Margin="5" Click="btnModificar_Click"/>
            <Button x:Name="btnEliminar" Content="Eliminar" Width="70" Margin="5" Click="btnEliminar_Click"/>
            <Button x:Name="btnGuardar" Content="Guardar" Width="70" Margin="5" Click="btnGuardar_Click"/>
        </StackPanel>

        <!-- Botones de navegación -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" Margin="0,0,0,10">
            <Button x:Name="btnPrimero" Content="&lt;&lt;" Width="40" Margin="5" Click="btnPrimero_Click"/>
            <Button x:Name="btnAnterior" Content="&lt;" Width="40" Margin="5" Click="btnAnterior_Click"/>
            <Button x:Name="btnSiguiente" Content="&gt;" Width="40" Margin="5" Click="btnSiguiente_Click"/>
            <Button x:Name="btnUltimo" Content="&gt;&gt;" Width="40" Margin="5" Click="btnUltimo_Click"/>
        </StackPanel>

        <!-- Campos -->
        <StackPanel Grid.Row="2">
            <Label Content="Apellido y Nombre"/>
            <TextBox x:Name="txtApellidoNombre" />
            <Label Content="User Name"/>
            <TextBox x:Name="txtUserName" />
            <Label Content="Password"/>
            <TextBox x:Name="txtPassword" />
            <Label Content="ID Usuario"/>
            <TextBox x:Name="txtID" IsReadOnly="True" />
            <Label Content="Rol "/>
            <ComboBox x:Name="cmbRol" Width="350"  Height="28"/>
        </StackPanel>
    </Grid>
</Window>