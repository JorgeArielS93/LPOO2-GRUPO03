<Window x:Class="Vistas.Usuarios.ABMUsuarios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ABM de Usuarios"
        Height="560" Width="595"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2c3e50" Margin="0,0,0,16">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="SISTEMA DE GESTIÓN DE CURSOS"
                           FontSize="18" FontWeight="Bold"
                           Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Universidad Nacional de Jujuy"
                           FontSize="12"
                           Foreground="#bdc3c7" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Background="White"
                CornerRadius="10" Margin="24,0,24,0"
                BorderBrush="#bdc3c7" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Administración de Usuarios"
                           FontSize="17" FontWeight="Bold"
                           HorizontalAlignment="Center" Foreground="#2c3e50"
                           Margin="0,14,0,12"/>

                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,8">
                    <Button x:Name="btnNuevo" Content="Nuevo" Width="110" Height="36" Margin="6" Click="btnNuevo_Click"
                            Background="#2c3e50" Foreground="White" BorderBrush="#2c3e50"/>
                    <Button x:Name="btnModificar" Content="Modificar" Width="110" Height="36" Margin="6" Click="btnModificar_Click"
                            Background="#2c3e50" Foreground="White" BorderBrush="#2c3e50"/>
                    <Button x:Name="btnEliminar" Content="Eliminar" Width="110" Height="36" Margin="6" Click="btnEliminar_Click"
                            Background="#ffffff" Foreground="#2c3e50" BorderBrush="#bdc3c7"/>
                    <Button x:Name="btnGuardar" Content="Guardar" Width="110" Height="36" Margin="6" Click="btnGuardar_Click"
                            Background="#10B981" Foreground="White" BorderBrush="#10B981"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                    <Button x:Name="btnPrimero" Content="⏮" Width="50" Height="32" Margin="5" Click="btnPrimero_Click"
                            Background="#34495e" Foreground="White" BorderBrush="#34495e"/>
                    <Button x:Name="btnAnterior" Content="◀" Width="50" Height="32" Margin="5" Click="btnAnterior_Click"
                            Background="#34495e" Foreground="White" BorderBrush="#34495e"/>
                    <Button x:Name="btnSiguiente" Content="▶" Width="50" Height="32" Margin="5" Click="btnSiguiente_Click"
                            Background="#34495e" Foreground="White" BorderBrush="#34495e"/>
                    <Button x:Name="btnUltimo" Content="⏭" Width="50" Height="32" Margin="5" Click="btnUltimo_Click"
                            Background="#34495e" Foreground="White" BorderBrush="#34495e"/>
                </StackPanel>

                <StackPanel Grid.Row="3" Margin="36,0,36,16" VerticalAlignment="Top">
                    <Grid Margin="0,0,0,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Apellido y Nombre:" FontWeight="SemiBold" Foreground="#34495e" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" x:Name="txtApellidoNombre" Height="34" FontSize="13"
                                 BorderBrush="#95a5a6" BorderThickness="1" Padding="10,6" Margin="8,0,0,6"/>
                    </Grid>

                    <Grid Margin="0,0,0,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Nombre de Usuario:" FontWeight="SemiBold" Foreground="#34495e" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" x:Name="txtUserName" Height="34" FontSize="13"
                                 BorderBrush="#95a5a6" BorderThickness="1" Padding="10,6" Margin="8,0,0,6"/>
                    </Grid>

                    <Grid Margin="0,0,0,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Contraseña:" FontWeight="SemiBold" Foreground="#34495e" VerticalAlignment="Center"/>
                        <PasswordBox Grid.Column="1" x:Name="txtPassword" Height="34" FontSize="13"
                                     BorderBrush="#95a5a6" BorderThickness="1" Padding="10,6" Margin="8,0,0,6"/>
                    </Grid>

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Rol:" FontWeight="SemiBold" Foreground="#34495e" VerticalAlignment="Center"/>
                        <ComboBox Grid.Column="1" x:Name="cmbRol" Height="32" FontSize="13" Margin="8,0,0,0"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>

        <TextBlock Grid.Row="2"
                   Text="© 2025 - Laboratorio de Programación Orientada a Objetos II"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="10" Foreground="#7f8c8d"/>
    </Grid>
</Window>
