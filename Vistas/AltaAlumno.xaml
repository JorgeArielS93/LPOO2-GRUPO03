<Window x:Class="Vistas.AltaAlumno"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AltaAlumno" Height="660" Width="848"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>


        <Border Grid.Row="0" Background="#2c3e50" Margin="0,0,0,20">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="SISTEMA DE GESTIÓN DE CURSOS" 
                          FontSize="18" FontWeight="Bold" 
                          Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Universidad Nacional de Jujuy" 
                          FontSize="12" 
                          Foreground="#bdc3c7" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Formulario de Alta Alumno -->
        <Border Background="White" 
                CornerRadius="10" Margin="40,0,40,0"
                BorderBrush="#bdc3c7" BorderThickness="1" Grid.Row="1"></Border>
        <StackPanel VerticalAlignment="Center" Margin="90,20,102,50" Grid.Row="1">
            <TextBlock Text="Alta Alumno" FontSize="17" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#2c3e50" Margin="0,0,0,30" />
            <!-- Campo Dni -->
            <TextBlock Text="DNI:" FontWeight="SemiBold" Foreground="#34495e" Margin="0,0,0,5" />
            <TextBox Name="txtDniAlumno" Height="35" FontSize="13" BorderBrush="#95a5a6" BorderThickness="1" Padding="10,8" Margin="0,0,0,15" />
            <!-- Campo Nombre -->
            <TextBlock Text="Nombre:" FontWeight="SemiBold" Foreground="#34495e" Margin="0,0,0,5" />
            <TextBox Name="txtNombreAlumno" Height="35" FontSize="13" BorderBrush="#95a5a6" BorderThickness="1" Padding="10,8" Margin="0,0,0,15" />
            <!-- Campo Apellido -->
            <TextBlock Text="Apellido:" FontWeight="SemiBold" Foreground="#34495e" Margin="0,0,0,5" />
            <TextBox Name="txtApellidoAlumno" Height="35" FontSize="13" BorderBrush="#95a5a6" BorderThickness="1" Padding="10,8" Margin="0,0,0,15" />
            <!-- Campo Email -->
            <TextBlock Text="Email:" FontWeight="SemiBold" Foreground="#34495e" Margin="0,0,0,5" />
            <TextBox Name="txtEmailAlumno" Height="35" FontSize="13" BorderBrush="#95a5a6" BorderThickness="1" Padding="10,8" Margin="0,0,0,20" Width="684" />
            <!-- Botón registro -->
            <Button Name="btnAltaAlumno" 
                    Content="REGISTRAR" 
                    Height="40" 
                    Width="158"
                    Click="btnAltaAlumno_Click" 
                    Style="{StaticResource ResourceKey=btnPlantillaRegistrar}" />

            <!-- Mensaje de error -->
            <TextBlock Name="lblError" Text="" Foreground="Red" HorizontalAlignment="Center" Margin="0,15,0,0" FontSize="12" />

           
        </StackPanel>

        <!-- Footer -->
        <TextBlock Grid.Row="2" 
                  Text="© 2025 - Laboratorio de Programación Orientada a Objetos II"
                  HorizontalAlignment="Center" VerticalAlignment="Center"
                  FontSize="10" Foreground="#7f8c8d"/>

    </Grid>
</Window>
