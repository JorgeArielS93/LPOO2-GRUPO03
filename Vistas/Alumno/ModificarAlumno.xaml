<Window x:Class="Vistas.ModificarAlumno"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:svc="clr-namespace:ClaseBase;assembly=ClaseBase"
        Title="ModificarAlumno" Height="666" Width="755">
    <Window.Resources>
        <ObjectDataProvider x:Key="DATA_ALUMNO"
                        ObjectType="{x:Type svc:TrabajarAlumnos}"
                        MethodName="TraerAlumno">
            <ObjectDataProvider.MethodParameters>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2c3e50" Margin="0,0,0,20">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="SISTEMA DE GESTIÓN DE CURSOS" 
                          FontSize="18" FontWeight="Bold" 
                          Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Universidad Nacional de Jujuy" 
                          FontSize="12" 
                          Foreground="#bdc3c7" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <Border Background="White" 
                CornerRadius="10" Margin="40,0,40,0"
                BorderBrush="#bdc3c7" BorderThickness="1" Grid.Row="1"></Border>
        <StackPanel VerticalAlignment="Center" Margin="90,20,102,50" Grid.Row="1" DataContext="{StaticResource DATA_ALUMNO}">
            <TextBlock Text="Modificar Alumno" FontSize="17" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#2c3e50" Margin="0,0,0,30" />

            <TextBlock Text="ID:" FontWeight="SemiBold" Foreground="#34495e" Margin="0,0,0,5" />
            <TextBox Name="txtIdAlumnoMod"
                     Style="{StaticResource EstiloError}"
                     Height="35" 
                     FontSize="13"
                     BorderBrush="#95a5a6" 
                     BorderThickness="1" 
                     Padding="10,8" 
                     Margin="0,0,0,15"
                     TextChanged="txtIdAlumnoMod_TextChanged"/>

            <TextBlock Text="DNI:" FontWeight="SemiBold" Foreground="#34495e" Margin="0,0,0,5" />
            <TextBox 
                Name="txtDniAlumnoMod" 
                Height="35" 
                FontSize="13" 
                BorderBrush="#95a5a6" 
                BorderThickness="1" 
                Padding="10,8" 
                Margin="0,0,0,15" 
                Style="{StaticResource EstiloError}"
                Text="{Binding Alu_DNI, 
                            UpdateSourceTrigger=PropertyChanged, 
                            ValidatesOnExceptions=True,
                            ValidatesOnDataErrors=True}" />

            <TextBlock Text="Nombre:" FontWeight="SemiBold" Foreground="#34495e" Margin="0,0,0,5" />
            
            <TextBox 
                Name="txtNombreAlumnoMod" 
                Height="35" 
                FontSize="13" 
                BorderBrush="#95a5a6" 
                BorderThickness="1" 
                Padding="10,8" 
                Margin="0,0,0,15" 
                Style="{StaticResource EstiloError}"
                Text="{Binding Alu_Nombre, 
                            UpdateSourceTrigger=PropertyChanged, 
                            ValidatesOnExceptions=True,
                            ValidatesOnDataErrors=True}" />

            <TextBlock Text="Apellido:" FontWeight="SemiBold" Foreground="#34495e" Margin="0,0,0,5" />
            <TextBox 
                Name="txtApellidoAlumnoMod" 
                Height="35" 
                FontSize="13" 
                BorderBrush="#95a5a6" 
                BorderThickness="1" 
                Padding="10,8" 
                Margin="0,0,0,15" 
                Style="{StaticResource EstiloError}"
                Text="{Binding Alu_Apellido, 
                            UpdateSourceTrigger=PropertyChanged, 
                            ValidatesOnExceptions=True,
                            ValidatesOnDataErrors=True}" />

            <TextBlock Text="Email:" FontWeight="SemiBold" Foreground="#34495e" Margin="0,0,0,5" />
            <TextBox 
                Name="txtEmailAlumnoMod" 
                Height="35" 
                FontSize="13" 
                BorderBrush="#95a5a6" 
                BorderThickness="1" 
                Padding="10,8" 
                Margin="0,0,0,15" 
                Style="{StaticResource EstiloError}"
                Text="{Binding Alu_Email, 
                            UpdateSourceTrigger=PropertyChanged, 
                            ValidatesOnExceptions=True,
                            ValidatesOnDataErrors=True}" />

            
            <Button Name="btnModificarAlumno" 
                    Content="GUARDAR CAMBIOS" 
                    Height="40" 
                    Width="200"
                    Style="{StaticResource ResourceKey=btnPlantillaRegistrar}"
                    Click="btnModificarAlumno_Click" />
                    <TextBlock Name="lblErrorMod" 
                       Foreground="Red" 
                       HorizontalAlignment="Center" 
                       Margin="0,15,0,0" FontSize="12"
                       DataContext="{x:Null}" Width="229" />

        </StackPanel>

        <TextBlock Grid.Row="2" Name="lblError" 
                       Foreground="Red" 
                       HorizontalAlignment="Center" 
                       Margin="260,0,231,0" FontSize="12"
                       DataContext="{x:Null}" Width="242" />
        <TextBlock Grid.Row="2" 
                  Text="© 2025 - Laboratorio de Programación Orientada a Objetos II"
                  HorizontalAlignment="Center" VerticalAlignment="Center"
                  FontSize="10" Foreground="#7f8c8d"/>
    </Grid>
</Window>
