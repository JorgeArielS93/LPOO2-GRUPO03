<Window x:Class="Vistas.AltaCurso"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AltaCurso" Height="840" Width="868"
        Loaded="AltaCurso_Loaded"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2c3e50" Margin="0,0,0,20">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="SISTEMA DE GESTIÓN DE CURSOS" 
                          FontSize="18" FontWeight="Bold" 
                          Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Universidad Nacional de Jujuy" 
                          FontSize="12" 
                          Foreground="#bdc3c7" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Formulario Alta Curso -->
        <Border Background="White" 
                CornerRadius="10" Margin="40,0,40,0"
                BorderBrush="#bdc3c7" BorderThickness="1" Grid.Row="1"/>

        <StackPanel VerticalAlignment="Center" Margin="90,20,102,50" Grid.Row="1">
            <TextBlock Text="Alta Curso" FontSize="17" FontWeight="Bold" 
                       HorizontalAlignment="Center" Foreground="#2c3e50" 
                       Margin="0,0,0,30" />

            <!-- Nombre -->
            <TextBlock Text="Nombre:" FontWeight="SemiBold" Foreground="#34495e" Margin="0,0,0,5"/>
            <TextBox Name="txtNombreCurso" Height="35" FontSize="13" BorderBrush="#95a5a6" 
                     BorderThickness="1" Padding="10,8" Margin="0,0,0,10"/>

            <!-- Descripción -->
            <TextBlock Text="Descripción:" FontWeight="SemiBold" Foreground="#34495e" Margin="0,0,0,5"/>
            <TextBox Name="txtDescripcionCurso" Height="60" FontSize="13" TextWrapping="Wrap"
                     AcceptsReturn="True" BorderBrush="#95a5a6" BorderThickness="1" 
                     Padding="10,8" Margin="0,0,0,10"/>

            <!-- Cupo -->
            <TextBlock Text="Cupo:" FontWeight="SemiBold" Foreground="#34495e" Margin="0,0,0,5"/>
            <TextBox Name="txtCupoCurso" Height="35" FontSize="13" BorderBrush="#95a5a6" 
                     BorderThickness="1" Padding="10,8" Margin="0,0,0,10"/>

            <!-- Fechas -->
            <TextBlock Text="Fecha de Inicio:" FontWeight="SemiBold" Foreground="#34495e" Margin="0,0,0,5"/>
            <DatePicker Name="FechaInicio" Height="28" FontSize="13" Margin="0,0,0,10"/>

            <TextBlock Text="Fecha de Fin:" FontWeight="SemiBold" Foreground="#34495e" Margin="0,0,0,5"/>
            <DatePicker Name="FechaFin" Height="28" FontSize="13" Margin="0,0,0,10"/>

            <!-- Estado -->
            <TextBlock Text="Estado:" FontWeight="SemiBold" Foreground="#34495e" Margin="0,0,0,5"/>
            <ComboBox Name="cmbEstadoCurso" Height="28" FontSize="13" Margin="0,0,0,10">
                <ComboBoxItem Content="Programado"/>
                <ComboBoxItem Content="En curso"/>
                <ComboBoxItem Content="Finalizado"/>
                <ComboBoxItem Content="Cancelado"/>
            </ComboBox>

            <!-- Docente -->
            <TextBlock Text="Docente:" FontWeight="SemiBold" Foreground="#34495e" Margin="0,0,0,5"/>
            <ComboBox Name="cmbDocente" Height="28" FontSize="13" Margin="0,0,0,15"/>

            <!-- Botón registro -->
            <Button Name="btnAltaCurso" 
                    Content="REGISTRAR" 
                    Height="40" FontSize="14" FontWeight="Bold"
                    Background="#3498db" Foreground="White" 
                    BorderThickness="0" Cursor="Hand"
                    Click="btnAltaCurso_Click" Width="158"/>

            <!-- Mensaje de error -->
            <TextBlock Name="lblError" Text="" Foreground="Red" 
                       HorizontalAlignment="Center" Margin="0,15,0,0" FontSize="12"/>
        </StackPanel>

        <!-- Footer -->
        <TextBlock Grid.Row="2" 
                  Text="© 2025 - Laboratorio de Programación Orientada a Objetos II"
                  HorizontalAlignment="Center" VerticalAlignment="Center"
                  FontSize="10" Foreground="#7f8c8d"/>
    </Grid>
</Window>
